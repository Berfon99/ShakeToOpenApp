<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Status text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status_waiting"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"/>


    <!-- SeekBar pour ajuster la sensibilité -->
    <SeekBar
        android:id="@+id/sensitivity_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_text"
        android:max="9"
        android:progress="4"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/sensitivity_slider_description"/>

    <TextView
        android:id="@+id/sensitivity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensitivity_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensitivity_slider"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>

    <!-- SeekBar pour ajuster le temps entre deux secousses -->
    <SeekBar
        android:id="@+id/time_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensitivity_value"
        android:max="5000"
        android:progress="1000"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/time_slider_description"/>

    <TextView
        android:id="@+id/time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_delay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_slider"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>

    <!-- Cercle GO qui change de couleur -->
    <FrameLayout
        android:id="@+id/go_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/time_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_shape"
        android:contentDescription="@string/go_circle_description">
        <TextView
            android:id="@+id/go_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_text"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Bouton pour démarrer/arrêter la détection -->
    <Button
        android:id="@+id/toggle_detection_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/toggle_detection_button_text"
        app:layout_constraintTop_toBottomOf="@+id/go_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="toggleDetection"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <!-- Bouton pour réinitialiser la détection -->
    <Button
        android:id="@+id/reset_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_button_text"
        app:layout_constraintTop_toBottomOf="@+id/toggle_detection_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="resetDetection"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <!-- Bouton pour fermer l'application -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="0dp"
        android:text="@string/close_button_text"
        app:layout_constraintTop_toBottomOf="@+id/reset_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:layout_height="50dp"
        android:onClick="closeApp"
        style="@style/Widget.AppCompat.Button.Colored"/>
</androidx.constraintlayout.widget.ConstraintLayout>
